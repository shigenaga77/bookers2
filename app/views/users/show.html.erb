<h2>User info</h2>
<div>
    <%= image_tag @user.get_profile_image(100,100) %>
</div>
    <table>
        <tbody>
            <tr>
                <th>name</th>
                <th>testes</th>
            </tr>
            <tr>
                <th>introduction</th>
                <th></th>
            </tr>
        </tbody>
    </table>
    <div>
        <% if @user == current_user %>
        <p><%= link_to "user", root_path %></p>
        <% end %>
    </div>
    
<h2>New book</h2>
  <%= form_with model: @book do |f| %>
    <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title %>
    </div>
    
    <div class="field">
        <%= f.label :Opinion %><br>
        <%= f.text_area :body %>
    </div>
    
    <div class="actions">
    <%= f.submit 'Create Book' %>
    </div>
  <% end %>