  <%= form_with model: @book do |f| %>
    <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title %>
    </div>
    
    <div class="field">
        <%= f.label :Opinion %><br>
        <%= f.text_area :body %>
    </div>
    
    <div class="actions">
    <%= f.submit 'Create Book' %>
    </div>
  <% end %>
  
