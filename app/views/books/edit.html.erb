<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book do |f| %>
        <% if @book.errors.any? %>
        <div>
          <h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
            <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
        </div>
        <% end %>
        <div class="form-group">
          <label for="inputTitle">Title</label>
          <%= f.text_field :title, autofocus: true, id:"inputTitle", class: 'form-control title' %>
        </div>
        <div class="form-group">
          <label for="inputIntroduction">Opinion</label>
        <%= f.text_area :body, autofoucus: true, id:"book_body", class: 'form-control book_body' %> 
        </div>
        <div class="form-group">
          <%= f.submit "Update Book", class: 'btn btn-success' %>
        </div>
      <% end %>
      <%= link_to "Show", book_path(@book.id) %>
      |
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>